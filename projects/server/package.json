{
  "type": "module",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=out/main.js --platform=node --format=esm --target=node20 --packages=external --sourcemap",
    "start": "node --enable-source-maps bin.js",
    "dev": "run-p dev:*",
    "dev:server": "node --watch --watch-preserve-output --enable-source-maps bin.js",
    "dev:build": "npm run build -- --watch",
    "dev:types": "tsc --watch --preserveWatchOutput --noEmit",
    "dev:db": "docker compose up"
  },
  "dependencies": {
    "@fastify/cookie": "^9.2.0",
    "@prisma/client": "^5.7.1",
    "@trpc/server": "^10.45.0",
    "fastify": "^4.25.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "esbuild": "0.19.11",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.7.1",
    "vitest": "^1.1.3"
  }
}
